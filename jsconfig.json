{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowJs": true,
        "checkJs": false,
        "jsx": "preserve"
    },
    "include": ["src/**/*", "src/**/*.vue"],
    "exclude": ["node_modules", "dist", "backend"]
}
